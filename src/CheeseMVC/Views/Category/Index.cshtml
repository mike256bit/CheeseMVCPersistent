@model List<CheeseMVC.Models.CheeseCategory>

<div class="cheese">
    <h1>@ViewBag.Title</h1>
    <span class="error"><h6>@ViewBag.Error</h6></span>
</div>

<table class="cheese">

    <tr>
        <th>Name</th>
    </tr>

    @foreach (var aCategory in Model)
    {
        <tr>
            <td><a asp-controller="Cheese" asp-action="Index" asp-route-id="@aCategory.ID">@aCategory.Name</a></td>
        </tr>
    }
</table>


<p class="cheese"><strong><a asp-controller="Category" asp-action="Add">Add Category</a></strong></p>